generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./user.db"
}

model User {
  id        String   @id @default(uuid())
  name      String
  status    String   @default("PENDING") // PENDING, ACTIVE, INACTIVE
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
