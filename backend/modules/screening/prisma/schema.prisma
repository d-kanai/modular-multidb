generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./screening.db"
}

model Screening {
  id        String   @id @default(uuid())
  userId    String
  userName  String
  status    String   @default("PENDING") // PENDING, PASSED, REJECTED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
